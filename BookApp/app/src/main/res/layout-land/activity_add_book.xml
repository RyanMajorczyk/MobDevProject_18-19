<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AddBook.AddBookActivity"
    android:baselineAligned="false">
    <fragment
        android:id="@+id/add_book_buttons_fragment"
        android:name="com.ryma.bookapp.AddBook.AddBookInputFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="1" />
    <fragment
        android:id="@+id/add_book_input_fragment"
        android:name="com.ryma.bookapp.AddBook.AddBookButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="1" />
</LinearLayout>